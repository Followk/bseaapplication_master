<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical"
    tools:context="com.dk.basepack.bseaapplication.activity.MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <com.dk.basepack.bseaapplication.weight.CustomizedBottomNavigationBar
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_bottom_navigation_bar_height"
        android:layout_alignParentBottom="true"
        android:clipChildren="false"></com.dk.basepack.bseaapplication.weight.CustomizedBottomNavigationBar>

</LinearLayout>
